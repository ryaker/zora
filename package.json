{
  "name": "zora-agent",
  "version": "0.9.5",
  "description": "Long-running autonomous personal AI agent â€” multi-provider, capability-routed, memory-enriched",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zora-agent": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "examples"
  ],
  "scripts": {
    "build": "tsc && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd src/dashboard/frontend && (test -d node_modules || npm ci --ignore-scripts) && npm run build && mkdir -p ../../../dist/dashboard/frontend && cp -r dist ../../../dist/dashboard/frontend/",
    "install:frontend": "cd src/dashboard/frontend && npm install --ignore-scripts",
    "dev": "tsx src/index.ts",
    "test": "npm run test:unit && npm run test:browser",
    "test:unit": "vitest run",
    "test:browser": "playwright test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm run test:unit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "author": "Rich Yaker <ryaker@yaker.org>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryaker/zora.git"
  },
  "keywords": [
    "ai-agent",
    "autonomous",
    "claude",
    "gemini",
    "llm",
    "orchestrator"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.39",
    "@clack/prompts": "^1.0.1",
    "commander": "^14.0.3",
    "express": "^4.21.2",
    "minisearch": "^7.2.0",
    "node-cron": "^4.2.1",
    "pino": "^10.3.1",
    "smol-toml": "^1.3.1",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "node-telegram-bot-api": "^0.67.0"
  },
  "peerDependenciesMeta": {
    "node-telegram-bot-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/express": "^4.17.21",
    "@types/node": "^22.19.11",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/pino": "^7.0.4",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.58.2",
    "supertest": "^7.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
